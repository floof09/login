{% extends "templates/sink.nunjucks" %}

{% block body %}
  <h2 class="sink-page-header">Pagination Default (Two pages)</h2>
  {{ luci.pagination() }}

  {{ luci.pagination(
      pages=[
        {
          text:"1"
        },
        {
          text:"2",
          current:true
        }
      ]
    ) }}

  <h2 class="sink-page-header">Pagination Hover (on page link 2)</h2>
  {{ luci.pagination(
      pages=[
        {
          text:"1",
          current:true
        },
        {
          href:"#",
          text:"2",
          class:"luci-pagination__link--hover"
        }
      ]
    ) }}

  <h2 class="sink-page-header">Pagination Focus (on page link 2)</h2>
  {{ luci.pagination(
      pages=[
        {
          text:"1",
          current:true
        },
        {
          href:"#",
          text:"2",
          class:"luci-pagination__link--focus"
        }
      ]
    ) }}

  <h2 class="sink-page-header">Pagination Default (Centered)</h2>
  {{ luci.pagination(class="luci-pagination--centered") }}

  <h2 class="sink-page-header">Pagination Default (Right Aligned)</h2>
  {{ luci.pagination(class="luci-pagination--right-aligned") }}

  <h2 class="sink-page-header">Pagination Default (Five pages)</h2>
  {{ luci.pagination(
      pages=[
        {
          text:"1",
          current:true
        },
        {
          href:"#",
          text:"2"
        },
        {
          href:"#",
          text:"3"
        },
        {
          href:"#",
          text:"4"
        },
        {
          href:"#",
          text:"5"
        }
      ]
    ) }}

  <h2 class="sink-page-header">Pagination Default (More than five pages)</h2>
  {{ luci.pagination(
      pages=[
        {
          href:"#",
          text:"1"
        },
        {
          href:"#",
          text:"2"
        },
        {
          text:"3",
          current:true
        },
        {
          href:"#",
          text:"4"
        },
        {
          href:"#",
          range:true,
          label:"pages 5-8"
        },
        {
          href:"#",
          text:"9"
        }
      ]
    ) }}

  {{ luci.pagination(
      pages=[
        {
          href:"#",
          text:"1"
        },
        {
          href:"#",
          text:"2"
        },
        {
          href:"#",
          range:true,
          label:"pages 3-6"
        },
        {
          href:"#",
          text:"7"
        },
        {
          text:"8",
          current:true
        },
        {
          href:"#",
          text:"9"
        }
      ]
    ) }}

    {{ luci.pagination(
      pages=[
        {
          href:"#",
          text:"1"
        },
        {
          href:"#",
          range:true,
          label:"pages 2-11"
        },
        {
          text:"12",
          current:true
        },
        {
          href:"#",
          text:"13"
        },
        {
          href:"#",
          text:"14"
        },
        {
          href:"#",
          range:true,
          label:"pages 15-38"
        },
        {
          href:"#",
          text:"39"
        }
      ]
    ) }}
{% endblock %}
