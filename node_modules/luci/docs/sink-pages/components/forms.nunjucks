{% extends "templates/sink.nunjucks" %}
{% block body %}
    <h2 class="sink-page-header">Label</h2>
    {{ luci.form_label(for="example", name="First Name") }}
    <h2 class="sink-page-header">Input Fields</h2>

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="example", name="Input Field") }}
      {{ luci.form_input(input_type="text", name="example", input_id="example") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="focus", name="Input Field Focused") }}
      {{ luci.form_input(input_type="text", name="focus", input_id="focus", class="luci-form__input--focused") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="error", name="Input Field Error") }}
      {{ luci.form_input(input_type="text", name="error", input_id="error", required=true, class="luci-form__input--error", describedby="unique-error-message-id") }}
      {{ luci.form_field_error(id="unique-error-message-id", error_message="This field is required") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="disabled", name="Input Field Disabled") }}
      {{ luci.form_input(input_type="text", name="disabled", input_id="disabled", disabled=true, class="luci-form__input--disabled") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="disabled", name="Input Field Readonly") }}
      {{ luci.form_input(input_type="text", value="I'm read only text, so you can't modify me", name="readonly", input_id="readonly", readonly=true, class="luci-form__input--readonly") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="helpText", name="Input field with help and error message") }}
      {{ luci.form_input(input_type="text", name="helpText", input_id="helpText", class="luci-form__input--error") }}
      {{ luci.form_field_help(help_message="Enter date in mm/dd/yyyy format") }}
      {{ luci.form_field_error(id="error-message-date", error_message="Please correct the date format") }}
    {% endcall %}

    {% call luci.form_field_group() %}
      {{ luci.form_label(for="small", name="Input field small") }}
      {{ luci.form_input(input_type="text", name="small", input_id="small", class="luci-form__input--sm") }}
    {% endcall %}

    <h2 class="sink-page-header">Radio Buttons</h2>
