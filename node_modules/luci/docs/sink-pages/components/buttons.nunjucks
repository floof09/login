{% macro button_example_wrap(label=false) %}
    <div class="button-sink-example" style="display: inline-block; background: transparent">
        <label class="sink-page-font-reset" style="font-size: 12px;">{{ label }}</label><br/>
        {{ caller() }}
    </div>
{% endmacro %}
