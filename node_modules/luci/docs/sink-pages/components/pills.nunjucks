{% extends "templates/sink.nunjucks" %}
{% block body %}
    <h1 class="sink-page-header">Pills Sink</h1>

    <h2 class="sink-page-header">Default</h2>
    {{ luci.pill() }}

    <h2 class="sink-page-header">Default 2 in a row</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill() }}{{ luci.pill() }}
    </div>

    <h2 class="sink-page-header">Default multiple</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill() }}{{ luci.pill(text="1") }}{{ luci.pill(text="1,000+") }}{{ luci.pill(text="Some text in a pill.") }}
    </div>

    <h2 class="sink-page-header">Error</h2>
    {{ luci.pill(class="luci-pill--error") }}

    <h2 class="sink-page-header">Error 2 in a row</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--error") }}{{ luci.pill(class="luci-pill--error") }}
    </div>

    <h2 class="sink-page-header">Error multiple</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--error") }}{{ luci.pill(class="luci-pill--error", text="1") }}{{ luci.pill(class="luci-pill--error", text="1,000+") }}{{ luci.pill(class="luci-pill--error", text="Some text in a pill.") }}
    </div>

    <h2 class="sink-page-header">Warning</h2>
    {{ luci.pill(class="luci-pill--warning") }}

    <h2 class="sink-page-header">Warning 2 in a row</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--warning") }}{{ luci.pill(class="luci-pill--warning") }}
    </div>

    <h2 class="sink-page-header">Warning multiple</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--warning") }}{{ luci.pill(class="luci-pill--warning", text="1") }}{{ luci.pill(class="luci-pill--warning", text="1,000+") }}{{ luci.pill(class="luci-pill--warning", text="Some text in a pill.") }}
    </div>

    <h2 class="sink-page-header">Success</h2>
    {{ luci.pill(class="luci-pill--success") }}

    <h2 class="sink-page-header">Success 2 in a row</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--success") }}{{ luci.pill(class="luci-pill--success") }}
    </div>

    <h2 class="sink-page-header">Success multiple</h2>
    <div class="sink-page-font-reset">
        {{ luci.pill(class="luci-pill--success") }}{{ luci.pill(class="luci-pill--success", text="1") }}{{ luci.pill(class="luci-pill--success", text="1,000+") }}{{ luci.pill(class="luci-pill--success", text="Some text in a pill.") }}
    </div>
{% endblock body %}
