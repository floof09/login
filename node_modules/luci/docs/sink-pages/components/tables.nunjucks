{% extends "templates/sink.nunjucks" %}
{% block body %}
  <h2 class="sink-page-header">Default Table</h2>
  {{ luci.table(headers=tables.default.columns, data=tables.default.rows) }}

  <h2 class="sink-page-header">Default Table with Caption</h2>
  {{ luci.table(wrapper_class="luci-table__wrapper-bg", caption="Serialized Systems", headers=tables.default.columns, data=tables.default.rows) }}

  <h2 class="sink-page-header">Table Cell Alignment</h2>
  {{ luci.table(headers=tables.alignment.columns, data=tables.alignment.rows) }}

  <h2 class="sink-page-header">Table Centered Align</h2>
  {{ luci.table(class="luci-table--align-center", headers=tables.default.columns, data=tables.default.rows) }}

  <h2 class="sink-page-header">Table Right Align</h2>
  {{ luci.table(class="luci-table--align-right", headers=tables.default.columns, data=tables.default.rows) }}

  <h2 class="sink-page-header">Sortable Table</h2>
  {{ luci.table(table_class="table-sortable-columns-examples luci-table__table--sortable-columns", headers=tables.sortable.columns, data=tables.sortable.rows) }}

  <h2 class="sink-page-header">Selectable Items</h2>
  {{ luci.table(table_class="table-sortable-columns-examples luci-table__table--sortable-columns luci-table__table--hover", selected=true, headers=tables.selectable.columns, data=tables.selectable.rows) }}

  <h2 class="sink-page-header">Inline Status Icons</h2>
  {{ luci.table(table_class="table-sortable-columns-examples luci-table__table--sortable-columns luci-table__table--hover", selected=true, headers=tables.icons.columns, data=tables.icons.rows) }}

  <h2 class="sink-page-header">Inline Actions</h2>
  {{ luci.table(table_class="table-sortable-columns-examples luci-table__table--sortable-columns", selected=false, headers=tables.actions.columns, data=tables.actions.rows) }}

  <h2 class="sink-page-header">Showing and Hiding Columns</h2>
  {{ luci.table(table_class="table-sortable-columns-examples luci-table__table--sortable-columns", selected=false, headers=tables.toggle.columns, data=tables.toggle.rows) }}

  <h2 class="sink-page-header">Resizable and Reorderable Columns</h2>
  {{ luci.table(
    id="table-resizable-reorderable-columns-example",
    table_class="luci-table__table--resizable-columns",
    headers=tables.sortable_example_2.columns,
    data=tables.sortable_example_2.rows
  ) }}

  <h2 class="sink-page-header">Nested Rows</h2>
  {{ luci.table(
    headers=tables.nested_rows_example.columns,
    data=tables.nested_rows_example.rows
  ) }}

  <h2 class="sink-page-header">Expandable Rows</h2>
  {{ luci.table(
    class="luci-table--expandable-rows",
    headers=tables.expandable_rows_example.columns,
    data=tables.expandable_rows_example.rows
  ) }}

  <script>
    /* eslint-disable */
    // The datables plugin requires jQuery

    // Init all tables with the classname of table-sortable-columns-examples
    // Define custom classnames for Datatables
    let extensions = {
        sSortAsc: 'luci-table__header-cell-sort--sorting-ascending',
        sSortDesc: 'luci-table__header-cell-sort--sorting-descending',
        sSortable: 'luci-table__header-cell-sort--sorting'
    }
    $.extend($.fn.dataTableExt.oStdClasses, extensions);

    $('.table-sortable-columns-examples').DataTable({
      paging: false,
      searching: false,
      info: false,
      // Target header cells by class name to NOT be sortable
      columnDefs: [ {
        "targets": ['luci-table__header-select', 'luci-table__header-toggle', 'luci-table__header-no-sort'],
        "orderable": false
      } ],
      // Empty array to prevent the first column from being sorted by default
      order: []
    })

    // Init table with the ID of table-resizable-reorderable-columns-example
    $('#table-resizable-reorderable-columns-example').DataTable({
      paging: false,
      searching: false,
      info: false,
      // Target header cells by class name to NOT be sortable
      columnDefs: [ {
        "targets": ['luci-table__header-select', 'luci-table__header-toggle', 'luci-table__header-no-sort'],
        "orderable": false
      } ],
      // Empty array to prevent the first column from being sorted by default
      order: [],
      // Initialize ColReorderWithResize
      // https://github.com/jeffreydwalter/ColReorderWithResize
      dom: 'Rlfrtip',
      colReorder: {
        // Target cells from right to not be resizable/reorderable
        iFixedColumnsRight: 3,
        // Custom class names for cloned element and border element
        classNameClonedTable: 'luci-table__header-cell-moving',
        classNamePointer: 'luci-table__header-cell-moving-border',
        classNameTableHeader: 'luci-table__header-cell-reorderable',
        classNameTableHeaderHover: 'luci-table__header-cell-resizable'
      }
    });
  </script>
{% endblock %}
