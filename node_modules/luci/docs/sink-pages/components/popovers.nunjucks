{% extends "templates/sink.nunjucks" %}
{% block body %}
    <h1 class="sink-page-header">Popovers Sink</h1>

    <p class="sink-page-font-reset">
        All Popovers will close on Escape key press and on click of document body. Only one Popover will be open at a time.
    </p>

    <h2 class="sink-page-header">Popover Default (More Actions)</h2>
    {{ luci.popover() }}

    <h2 class="sink-page-header">Popover Default (More Actions) With Scrolling Content</h2>
    {{ luci.popover(
        list=[
            {
                text:"Edit Details",
                href:"#"
            },
            {
                text:"View History",
                href:"#"
            },
            {
                text:"Decomission",
