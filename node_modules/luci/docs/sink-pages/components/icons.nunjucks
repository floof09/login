{% extends "templates/sink.nunjucks" %}
{% block body %}
    <style>
        .icon-sink-example {
            flex-shrink: 0;
        }

        body {
            text-align: left;
            text-indent: 0;
        }
    </style>
    <h2 class="sink-page-header">Icons Sink</h2>
    <h2 class="sink-page-header">Basic Icon</h2>
    {{ luci.icon(title="Check Your Messages") }}

    {% for icon_size_label, size in luci_tokens.icon.size %}
        <h2 class="sink-page-header">Icons Sink {{ icon_size_label }} ({{ size }})</h2>
        <div style="display: flex; flex-wrap: wrap; width: 100%;">
            {% for icon in icons %}
                <div style="display:inline-flex; flex-direction: column; justify-content: center; align-items: center; height: 140px; width: 140px; background: transparent; border: solid 1px lightgray;">
                    {{ luci.icon(name=icon, class="icon-sink-example luci-icon--size-" + icon_size_label) }}
                    <span style="color: black; font-size: 14px; background: transparent; line-height: 1; text-shadow: none; letter-spacing: 0; text-transform: none; font-style: normal; font-weight: normal; text-indent: 0; font-family: {{ luci_tokens.font.family['sans-serif'] | safe }};">{{icon}}</span>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock body %}
