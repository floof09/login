{% extends "templates/sink.nunjucks" %}

{% block body %}
  <h2 class="sink-page-header">Breadcrumb Default</h2>
  {{ luci.breadcrumb() }}

  <h2 class="sink-page-header">Breadcrumb Hover</h2>
  {{ luci.breadcrumb(breadcrumbs=[
      {
        href: "#",
        text: "Breadcrumb"
      },
      {
        href: "#",
        text: "Breadcrumb Hover",
        class: "luci-breadcrumb__link--hover"
      },
      {
        text: "Current Page"
      }
    ]) }}

    <h2 class="sink-page-header">Breadcrumb Focus</h2>
    {{ luci.breadcrumb(breadcrumbs=[
        {
          href: "#",
          text: "Breadcrumb"
        },
        {
          href: "#",
          text: "Breadcrumb Focus",
          class: "luci-breadcrumb__link--focus"
        },
        {
          text: "Current Page"
        }
      ]) }}
{% endblock %}
