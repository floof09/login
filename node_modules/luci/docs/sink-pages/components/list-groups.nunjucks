{% extends "templates/sink.nunjucks" %}
{% block body %}
    <h1 class="sink-page-header">List Groups Sink</h1>

    {% macro in_dark_containers(
        heading="Default",
        example=false,
        background_colors=["dark", "medium-blue", "dark-blue", "purple"]
    ) %}
        <h2 class="sink-page-header">{{ heading }}</h2>
        <div class="luci-doc-container">
            {{ example }}
        </div>

        <h2 class="sink-page-header">{{ heading }} in Narrow Container</h2>
        <div class="luci-doc-container">
            <div class="luci-doc-container luci-doc-container--narrow">
                {{ example }}
            </div>
        </div>

        {% for color in background_colors %}
            <h2 class="sink-page-header">{{ heading }} on {{ color }} background</h2>
            <div class="luci-container--{{ color }} luci-doc-container">
                {{ example }}
            </div>
        {% endfor %}
    {% endmacro %}

    {{ in_dark_containers(example=luci.list_group(list=list.default.kitchen_sink)) }}

    {{ in_dark_containers(heading="With Icon", example=luci.list_group(list=list.with_icon)) }}

    {{ in_dark_containers(heading="With Pill", example=luci.list_group(list=list.with_pill)) }}

    {{ in_dark_containers(heading="With Icon and with Pill", example=luci.list_group(list=list.with_icon_and_pill)) }}

    {{ in_dark_containers(heading="With Contextual Icons", example=luci.list_group(list=list.with_contextual_icons)) }}

    <h2 class="sink-page-header">With Checkboxes</h2>
    <div class="luci-doc-container">
        {{ luci.list_group(list=list.with_checkboxes) }}
    </div>

    <h2 class="sink-page-header">With Checkboxes in Narrow Container</h2>
    <div class="luci-doc-container">
        <div class="luci-doc-container luci-doc-container--narrow">
            {{ luci.list_group(list=list.with_checkboxes) }}
        </div>
    </div>

    <h2 class="sink-page-header">With Checkboxes on dark background</h2>
    <div class="luci-container--dark luci-doc-container">
        {{ luci.list_group(list=list.with_checkboxes) }}
    </div>

    <h2 class="sink-page-header">With Checkboxes on medium-blue background</h2>
    <div class="luci-container--medium-blue luci-doc-container">
        {{ luci.list_group(list=list.with_checkboxes) }}
    </div>

    <h2 class="sink-page-header">With Checkboxes on dark-blue background</h2>
    <div class="luci-container--dark-blue luci-doc-container">
        {{ luci.list_group(list=list.with_checkboxes) }}
    </div>

    <h2 class="sink-page-header">With Checkboxes on purple background</h2>
    <div class="luci-container--purple luci-doc-container">
        {{ luci.list_group(list=list.with_checkboxes) }}
    </div>
{% endblock body %}
