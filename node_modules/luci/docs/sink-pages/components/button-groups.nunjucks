{% extends "templates/sink.nunjucks" %}
{% block body %}
    <style>
        body {
            text-align: left;
        }

        .button-sink-example {
            text-align: left;
            text-indent: 0;
        }
        .button-sink-example label {
            color: black;
        }

        .n-container--dark .button-sink-example label {
            color: white;
        }
    </style>
    <h2 class="sink-page-header">Small Secondary Button Group</h2>
    <h2 class="sink-page-header">Toggles</h2>
    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle", text="Left") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle", text="Middle") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle", text="Right") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle-hover", text="Left") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="radio", name="basic-toggle-hover", text="Middle") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle-hover", text="Right") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle-checked", text="Left") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle-checked", text="Middle", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="basic-toggle-checked", text="Right") }}
    {% endcall %}
    <br>

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle", icon_left="delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle", icon_left="download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle", icon_left="help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-hover", icon_left="delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="radio", name="icon-toggle-hover", icon_left="download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-hover", icon_left="help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-checked", icon_left="delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-checked", icon_left="download", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-checked", icon_left="help") }}
    {% endcall %}

    <br>
    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text", icon_left="delete", text="Delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text", icon_left="download", text="Download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text", icon_left="help", text="Help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text-hover", icon_left="delete", text="Delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="radio", name="icon-toggle-with-text-hover", icon_left="download", text="Download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text-hover", icon_left="help", text="Help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text-checked", icon_left="delete", text="Delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text-checked", icon_left="download", text="Download", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="icon-toggle-with-text-checked", icon_left="help", text="Help") }}
    {% endcall %}

    <h2 class="sink-page-header">Multi Select</h2>
    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select", text="Left") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select", text="Middle") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select", text="Right") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select-hover", text="Left") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="checkbox", name="basic-multi-select-hover", text="Middle") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select-hover", text="Right") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select-checked", text="Left", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select-checked", text="Middle") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="basic-multi-select-checked", text="Right", checked=true) }}
    {% endcall %}
    <br>

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select", icon_left="delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select", icon_left="download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select", icon_left="help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-hover", icon_left="delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="checkbox", name="icon-multi-select-hover", icon_left="download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-hover", icon_left="help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-checked", icon_left="delete", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-checked", icon_left="download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-checked", icon_left="help", checked=true) }}
    {% endcall %}

    <br>
    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text", icon_left="delete", text="Delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text", icon_left="download", text="Download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text", icon_left="help", text="Help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text-hover", icon_left="delete", text="Delete") }}
        {{ luci.button(class="luci-button--secondary luci-button--small luci-button--hover", el="checkbox", name="icon-multi-select-with-text-hover", icon_left="download", text="Download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text-hover", icon_left="help", text="Help") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text-checked", icon_left="delete", text="Delete", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text-checked", icon_left="download", text="Download") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox", name="icon-multi-select-with-text-checked", icon_left="help", text="Help", checked=true) }}
    {% endcall %}

    <h2 class="sink-page-header">Vertical Alignment with individual buttons</h2>
    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="checkbox") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", icon_left="messages", text="Messages") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", icon_right="user-profile", icon_left="download", text="Download Profile") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", icon_right="menu", el="checkbox") }}
    {% endcall %}

    {{ luci.button(class="luci-button--secondary luci-button--small") }}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="secondary-button-group-toggle", icon_left="menu", checked=true) }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="secondary-button-group-toggle", icon_left="chat") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", el="radio", name="secondary-button-group-toggle", icon_left="delete") }}
    {% endcall %}

    {% call luci.button_group() %}
        {{ luci.button(class="luci-button--secondary luci-button--small", text="Manage Details") }}
        {{ luci.button(class="luci-button--secondary luci-button--small", icon_left="expand") }}
    {% endcall %}

    <h2 class="sink-page-header">Too Much Content, Wrapping Behavior</h2>
    <div style="width:500px">
        {% call luci.button_group() %}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_left="messages", text="Messages") }}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_right="user-profile", icon_left="download", text="Download Profile") }}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_left="messages", text="Messages") }}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_right="user-profile", icon_left="download", text="Download Profile") }}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_left="messages", text="Long label") }}
            {{ luci.button(class="luci-button--secondary luci-button--small", icon_right="user-profile", icon_left="download", text="Download Profile") }}
        {% endcall %}
    </div>
    <br>
{% endblock %}
